---
import "../styles/global.css";
import { Toaster } from "../components/ui/sonner";

interface Props {
  // eslint-disable-next-line prettier/prettier
  title?: string;
}

const { title = "JobHop - Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Navigation Header -->
    <header class="bg-white border-b border-gray-200 px-4 py-3">
      <nav class="flex items-center justify-between max-w-7xl mx-auto">
        <div class="flex items-center space-x-4">
          <h1 class="text-xl font-semibold text-gray-900">JobHop</h1>
        </div>

        <nav class="flex items-center space-x-6">
          <!-- Guest navigation (non-auth mode) -->
          <!-- TODO: Replace with auth-aware navigation once auth state is implemented -->
          <a href="/login" class={Astro.url.pathname === "/login" ? "text-blue-600 font-medium" : "text-gray-600 hover:text-gray-900"} transition-colors>
            Zaloguj się
          </a>
          <a href="/register" class={Astro.url.pathname === "/register" ? "text-blue-600 font-medium" : "text-gray-600 hover:text-gray-900"} transition-colors>
            Zarejestruj się
          </a>

          <!-- Future: Authenticated navigation (auth mode) -->
          <!--
          <a href="/dashboard" class={Astro.url.pathname === "/dashboard" ? "text-blue-600 font-medium" : "text-gray-600 hover:text-gray-900"} transition-colors>
            Dashboard
          </a>
          <a href="/stats" class={Astro.url.pathname === "/stats" ? "text-blue-600 font-medium" : "text-gray-600 hover:text-gray-900"} transition-colors>
            Statystyki
          </a>
          <UserMenu client:load />
          -->
        </nav>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen bg-gray-50">
      <slot />
    </main>

    <!-- Toast Notifications -->
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
