---
// eslint-disable-next-line prettier/prettier
import MainLayout from "../layouts/MainLayout.astro";
import { FeedbackToaster } from "../components/ui/FeedbackMessage";

export const prerender = false; // Enable SSR for auth pages
---

<MainLayout title="JobHop - Resetowanie hasła">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Resetowanie hasła
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Funkcjonalność resetowania hasła zostanie dodana w przyszłej wersji
        </p>
      </div>

      <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
        <div class="text-center">
          <p class="text-gray-600 mb-6">
            Ta funkcjonalność nie jest jeszcze dostępna w MVP.
          </p>
          <a
            href="/login"
            class="text-blue-600 hover:text-blue-500 font-medium"
          >
            ← Powrót do logowania
          </a>
        </div>
      </div>
    </div>
  </div>

  <FeedbackToaster client:load />
</MainLayout>
